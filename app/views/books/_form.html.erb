
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :number %>
    <%= f.input :datelivraison, as: :date, html5: true %>

    <%= f.input :etat, as: :radio_buttons,selected: true, collection: Book::ETATBOOK %>
    <%= f.input :sursite %>
    <%= f.association :client, :collection => @clients,
               :label_method => :fullname,
               :value_method => :id, 
               selected: true,
              selected:  (@book.client.id unless @book.client.nil?)  || @clients.first.id,
               :label => "Client"
                %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


