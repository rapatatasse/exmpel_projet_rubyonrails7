<h1>Liste des utilisateurs</h1>
 <%= render "shared/searchbar", bookpath: "/users" %>
<%= link_to ' New', new_user_path, class: "fa fa-plus btn btn-success"%>
  <div class="card-body">
    <% l = 0 %>
      <table class="table table-hover">
          <thead  class="thead-dark">
            <tr>
                <th scope="row" colspan="1">email</th>
                <th scope="row" colspan="1">Fistname</th>
                <th scope="row" colspan="1">Lastname</th>
                <th scope="row" colspan="1">tel</th>
                <th scope="row" colspan="1">Liste des clients</th>
                <th colspan="1">role</th>
            </tr>
          </thead>
        <% @users.each do |user| %>
            <tbody >
                <tr>
                  <td scope="row"><%= user.email %></td>
                  <td><%= user.firstname %></td>
                  <td><%= user.lastname %></td>
                  <td><%= user.tel %></td>
                  <td>
                    <% user.clients.each do |client| %>
                      <li><%=client.username%></li>
                    <%end%>
                  </td>
                  <td><%= user.role %></td>
                  <td class="taches">
                
                    <div class="d-flex">
                      <%= link_to '', edit_user_path(user), class: "btn fa fa-pen tdhidden" %>
                      <%= button_to '', user, method: :delete, :onclick => "return confirm('Are you sure you want to delete?')", class: "btn text-danger fa fa-trash tdhidden" %>
                    </div>
                  </td>
                </tr>
            </tbody>
        <% end %>
      </table>
  </div>

<%= link_to '', root_path, class: "fas fa-arrow-left btn btn-outline-secondary" %>
<%= link_to " Back", :back , class: "fas fa-arrow-left btn btn-outline-secondary"%>